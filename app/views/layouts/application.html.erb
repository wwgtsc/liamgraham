<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title><%= content_for?(:title) ? yield(:title) : "Liam Graham, Bassist" %></title>
        <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Liam Graham, Bassist" %>">
        <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
        <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
        <%= csrf_meta_tags %>
    </head>

    <body>
        <div id="container">
            <header>
                <%= render 'layouts/navigation' %>
                <%= render 'layouts/messages' %>
            </header>
            <main role="main">
                <%= yield %>
            </main>

            <footer>
            </footer>
        </div>
    </body>
</html>